<div>
  <%= flash[:notice] %>
</div>
<h2>Book detail</h2>
<table class = "table">
  <tr>
    <td><%=link_to image_tag book.user.get_profile_image(100,100), @user.name, user_path(user.id) %></td>
<div class=text><td> <%=link_to book.title, book_path(book.id) %> </td>
<td> <%= book.body %> </td></div>
  </tr>
  <div class = "form-group">
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(book.id), class: 'btn btn-sm btn-success' %>
  <% end %>
  </div>
  <div class = "form-group">
  <% if @book.user == current_user %>
    <%= link_to "Destroy", books_path, class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
  </div>
</table>

<%= render 'books/list', book: @book %>