<p id = "notice"></p>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
  <main><div class = "errors"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul></main>
<% end %>
      <%= form_with model: @user do |f| %>
      <label for = "book_name">
        Name
      </label>
      <%= f.text_field :title %><br>
      <label for = "opinion">
        Opinion
      </label>
      <%= f.area_field :body %><br>
      <div class = "form-group">
      <% f.submit "Update Book", class: 'btn btn-sm btn-success' %><br>

      </div>
      <span class = "link"><%= link_to "Show", book_path(@book.id) %></span>
|
<span class = "link"><%= link_to "Back", books_path %></span>
    </div>
  </div>
</div>
<% end %>