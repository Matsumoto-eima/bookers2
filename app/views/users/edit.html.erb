<div>
  <%= flash[:notice] %>
</div>
<p id = "notice"></p>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
  <main><div class = "errors"><%= @user.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul></main>
<% end %>
      <%= form_with model: @user do |f| %>
      <label for = "user_name">
        Name
      </label><br>
      <%= f.text_field :name %><br>
      <label for = "image">
        Image
      </label><br>
      <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %><br>
      <label for = "user_introduction">
        Introduction
      </label><br>
      <%= f.text_area :introduction %><br>
      <div class="actions mt-3 text-center">
      <%= f.submit "Update User", class: 'btn btn-sm btn-secondary' %>
      </div>
    </div>
  </div>
</div>
<% end %>